<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hospital.mapper.UserMapper">
    <sql id="columnsSql">
        ID,
        NAME,
        CARDNUMBER,
        SEX,
        PHONE,
        AGE,
        EMAIL
    </sql>
    <sql id="whereSql">
        <where>
        </where>
    </sql>

    <select id="checkExists" resultType="com.hospital.pojo.User" parameterType="string">
        select
        <include refid="columnsSql"/>
        from user
        where phone=#{pNumber} or cardNumber=#{cNumber} or email=#{email}
    </select>

</mapper>